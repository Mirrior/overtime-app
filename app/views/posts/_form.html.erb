<%= form_for @post, class: 'form-horizontal' do |form| %>

  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Overtime App Notification", sticky: false, time: 4000) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :overtime_request, class: "col-sm-2 control-label" %>
    <%= form.text_field :overtime_request, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date, class: "col-sm-2 control-label" %>
    <%= form.date_field :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :rationale, class: "col-sm-2 control-label" %>
    <%= form.text_area :rationale, class: "form-control" %>
  </div>

  <%= render partial: 'status', locals: { form: form } if current_user.type == 'AdminUser' %>

  <%= form.submit "Save", class: "btn btn-primary btn-block" %>

<% end %>
